<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/infoGraphic"
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:adjustViewBounds="true"
        android:background="#FFFFFF"
        android:src="@drawable/info_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/info_item"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Item"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/urgentText"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="URGENT"
                android:textColor="@color/red_dialog"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ableToMoveText"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="ABLE TO RELOCATE"
                android:textColor="@color/purple_700"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/info_posted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="10:37, April 22"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/info_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Philadelphia, PA"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>